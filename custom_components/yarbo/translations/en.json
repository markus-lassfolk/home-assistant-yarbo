  "config": {
    "step": {
      "user": {
        "title": "Connect to Yarbo",
        "description": "Enter the IP address of your Yarbo base station (Data Center). The integration will connect to the local MQTT broker on port 1883.",
        "data": {
          "broker_host": "Base Station IP Address",
          "broker_port": "MQTT Port"
        }
      },
      "manual": {
        "title": "Enter connection details",
        "description": "No Yarbo devices were found on the network. Enter the base station IP address and MQTT port manually.",
        "data": {
          "broker_host": "Base Station IP Address",
          "broker_port": "MQTT Port"
        }
      },
      "confirm": {
        "title": "Yarbo Discovered",
        "description": "Found **Yarbo {name}** on your network at {host}. Click Submit to add this robot."
      },
      "select_endpoint": {
        "title": "Choose MQTT Endpoint",
        "description": "We found **{count}** path(s) to your Yarbo mower (order from discovery: Primary, then Secondary). Both connect to the same broker. Failover will try the next in this order when the current one is unavailable.",
        "data": {
          "selected_endpoint": "Endpoint"
        }
      },
      "mqtt_test": {
        "title": "Connecting to Yarbo",
        "description": "Testing MQTT connection and waiting for telemetry from your robot..."
      },
      "reconfigure": {
        "title": "Reconfigure Yarbo",
        "description": "Update the IP address of your Yarbo base station.",
        "data": {
          "broker_host": "Base Station IP Address",
          "broker_port": "MQTT Port"
        }
      },
      "name": {
        "title": "Name Your Robot",
        "description": "Choose a name for your Yarbo robot. This will be used for all entity names.",
        "data": {
          "robot_name": "Robot Name"
        }
      },
      "cloud": {
        "title": "Cloud Features (Optional)",
        "description": "Optionally connect to the Yarbo cloud for firmware updates and device info. Not required for local control. Leave blank to skip.",
        "data": {
          "cloud_username": "Yarbo Account Email",
          "cloud_password": "Password"
        }
      },
      "reauth_confirm": {
        "title": "Re-authenticate Yarbo Cloud",
        "description": "Your Yarbo cloud session for **{username}** has expired. Enter your password to reconnect.",
        "data": {
          "cloud_password": "Password"
        }
      }
    },
    "abort": {
      "already_configured": "This robot is already configured.",
      "cannot_connect": "Cannot connect to MQTT broker at {host}:1883. Is the base station powered on and reachable?",
      "no_telemetry": "Connected but no robot telemetry received within 10 seconds. Is the robot powered on?",
      "decode_error": "Received data but cannot decode it. Firmware may be incompatible.",
      "not_implemented": "Configuration flow not yet implemented.",
      "wrong_device": "The discovered device does not match this Yarbo robot.",
      "reconfigure_successful": "Reconfiguration completed successfully.",
      "reconfigure_failed": "Reconfiguration failed.",
      "reauth_successful": "Re-authentication successful."
    },
    "error": {
      "cannot_connect": "Cannot connect",
      "no_telemetry": "No telemetry received within 30 seconds. Ensure the robot is powered on and near the base station, then try again.",
