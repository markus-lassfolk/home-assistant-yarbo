  "issues": {
    "telemetry_timeout": {
      "title": "Yarbo telemetry not received",
      "description": "No telemetry has been received from **{name}** for at least 60 seconds. Check that the base station is powered on and connected to the network."
    },
    "mqtt_disconnect": {
      "title": "Yarbo base station unreachable",
      "description": "No telemetry has been received from **{name}** for at least 60 seconds. The robot may be out of range or the base station may be powered off.\n\n**Steps to resolve:**\n1. Check that the Yarbo Data Center (base station) is powered on.\n2. Verify that the base station is connected to your local network.\n3. Confirm that Home Assistant can reach the base station IP address.\n\nThis issue will resolve automatically when telemetry resumes."
    },
    "controller_lost": {
      "title": "Yarbo controller session lost",
      "fix_flow": {
        "step": {
          "confirm": {
            "title": "Re-acquire controller",
            "description": "The Yarbo app or another client has taken the controller session for **{name}**, preventing Home Assistant from sending commands.\n\nPress **Submit** to re-acquire the controller session."
          }
        },
        "abort": {
          "cannot_connect": "Could not re-acquire the controller session. Check that the Yarbo base station is reachable and try again.",
          "unknown": "An unexpected error occurred while re-acquiring the controller session."
        }
      }
    },
    "cloud_token_expired": {
      "title": "Yarbo cloud session expired",
      "fix_flow": {
        "step": {
          "confirm": {
            "title": "Re-authenticate cloud",
            "description": "Your Yarbo cloud token for **{name}** has expired. Press **Submit** to open the re-authentication flow and enter your password again."
          }
        },
        "abort": {
          "unknown": "Could not start re-authentication flow."
        }
      }
    }
